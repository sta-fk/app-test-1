{% extends 'base.html.twig' %}

{% block body %}
        <div class="row">
            <h1>Users</h1>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Group</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.userGroup.name }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a class="btn btn-outline-dark" role="button" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
                        <a class="btn btn-outline-dark" role="button" href="{{ path('user_delete', {'id': user.id}) }}">Delete</a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col">
                <a class="btn btn-outline-dark" href="{{ path('user_new') }}" role="button">Create user</a>
            </div>
        </div>
{% endblock %}